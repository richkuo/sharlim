<p id="notice"><%= notice %></p>
<div class="jumbotron">
	<iframe width="420" height="315" src="http://www.youtube.com/embed/niNyPd-CAFU" frameborder="0" allowfullscreen></iframe>
	<h3><%= @event.title %></h3>
	<h3><%= @event.tagline %></h3>
</div>

	<span>Price to join this event: $<%= '%.2f' % (@event.price.to_i/100.0) %></span>

<%= form_tag event_charges_path(@event) do %>
  <script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="Sign up for this event!"
          data-amount=<%= @event.price.to_i %>>
  </script>
<% end %>

<div class="row-fluid">
<h3>Attending Users:</h3>
<% @event.viewers.each do |v| %>
	<p><%= v.username %></p>
	<hr>
<% end %>

<%= form_for(@event.guestlists.build(event_id: @event.id, viewer_id: current_user.id), remote: true) do |f| %>
	<%= f.hidden_field :viewer_id %>
	<%= f.hidden_field :event_id %>
	<%= f.submit "Join", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
</div>