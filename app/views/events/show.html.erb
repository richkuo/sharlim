<div class="jumbotron">
  <div class="row-fluid">
	<h3><%= @event.title %></h3>
	<h3><%= @event.tagline %></h3>
	<h3><%= @event.when %></h3>
	<h3>by: <%= User.find(@event.host_id).first_name %> <%= User.find(@event.host_id).last_name %></h3>

	<% if current_user && current_user.attending?(@event) %>
		<div>
			<% if @event.url %>
				<iframe width="420" height="315" src="<%= @event.url %>" frameborder="0" allowfullscreen></iframe>
			<% else %>
				Video will be available on <%= @event.when %>.
			<% end %>
		</div>
		You have paid for this event.
	<% elsif current_user && !current_user.attending?(@event) %>
		<p>Price to join this event: $<%= '%.2f' % (@event.price.to_i/100.0) %></p>
		<%= form_tag event_charges_path(@event) do %>
			<script src="https://checkout.stripe.com/v2/checkout.js" class="stripe-button"
				data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
				data-description="Sign up for this event!"
				data-amount=<%= @event.price.to_i %>>
			</script>
		<% end %>
	<% end %>
	</div>
</div>

<div class="row-fluid">
	<h3>Attending Users:</h3>
	<% @event.viewers.each do |v| %>
		<p><%= v.username %></p>
		<hr>
	<% end %>

	<%= link_to 'Back', events_path %>
</div>
